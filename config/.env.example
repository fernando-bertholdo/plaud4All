# Notion Configuration
NOTION_TOKEN=secret_your_notion_integration_token_here
NOTION_DATABASE_ID=your_database_id_here

# Transcription Service Configuration
# Choose your transcription provider: gemini, openai, or whisper_local
TRANSCRIPTION_PROVIDER=gemini

# Gemini API (recommended for MVP - generous free tier)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash  # or gemini-1.5-pro for better quality

# OpenAI API (optional - uncomment if using)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_WHISPER_MODEL=whisper-1

# Local Whisper Configuration (optional - uncomment if using)
# WHISPER_MODEL_SIZE=base  # tiny, base, small, medium, large
# WHISPER_DEVICE=cpu  # cpu or cuda

# Folder Paths
# IMPORTANT: Use absolute paths. Examples:
# macOS: /Users/yourusername/Library/Mobile Documents/com~apple~CloudDocs/plaud4All/recordings
# Windows: C:/Users/yourusername/iCloudDrive/plaud4All/recordings
ICLOUD_FOLDER_PATH=/path/to/icloud/plaud4All/recordings
PROCESSING_FOLDER_PATH=/path/to/local/processing
ARCHIVE_FOLDER_PATH=/path/to/archive

# Processing Configuration
PROCESS_INTERVAL_SECONDS=10
MAX_CONCURRENT_JOBS=2
CLEANUP_AFTER_PROCESSING=false  # Keep original files in iCloud
ARCHIVE_PROCESSED_FILES=true    # Move to archive after processing

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/plaud4all.log
